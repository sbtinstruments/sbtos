#!/bin/sh

source /etc/profile

case "$1" in
        start)
#                echo -n "Starting SPCI server ... "
#                LD_LIBRARY_PATH=$PATH_REDPITAYA/lib $PATH_REDPITAYA/bin/scpi-server &
                echo -n "TODO, NOT Starting SPCI server ... "
                echo "done."
                ;;
        stop)
                echo -n "Stopping SCPI server ..."
                killall scpi-server
                echo "done."
                ;;
        restart)
                $0 stop
                sleep 1
                $0 start
                ;;
        *)
                echo "usage: $0 {start|stop|restart}"
                ;;
esac
