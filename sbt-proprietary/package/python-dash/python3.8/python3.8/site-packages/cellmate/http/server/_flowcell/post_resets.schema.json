{
    "type": "object",
    "title": "Reset",
    "description": "Schema for the JSON file for resetting/initializing the flowcell DB",
    "definitions": {
        "site": {
            "type": "object",
            "required": [
                "state",
                "meas_chan_width_m",
                "meas_chan_height_m",
                "electrode_length_m",
                "electrode_width_m",
                "electrode_distance_m",
                "flow_profile_corr",
                "empi_conc_corr"
            ],
            "properties": {
                "state": {
                    "type": "integer",
                    "minimum": 0
                },
                "meas_chan_width_m": {
                    "type": "number",
                    "examples": [
                        4e-05
                    ]
                },
                "meas_chan_height_m": {
                    "type": "number",
                    "examples": [
                        1.05e-05
                    ]
                },
                "electrode_length_m": {
                    "type": "number",
                    "examples": [
                        3e-05
                    ]
                },
                "electrode_width_m": {
                    "type": "number",
                    "examples": [
                        1e-05
                    ]
                },
                "electrode_distance_m": {
                    "type": "number",
                    "examples": [
                        3.9e-05
                    ]
                },
                "flow_profile_corr": {
                    "type": "number",
                    "examples": [
                        1.5072
                    ]
                },
                "empi_conc_corr": {
                    "type": "number",
                    "minimum": 0
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "variables",
        "sites"
    ],
    "properties": {
        "variables": {
            "type": "object",
            "required": [
                "flowcell_id",
                "design_id",
                "durability",
                "db_schema_version"
            ],
            "properties": {
                "flowcell_id": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 3,
                    "examples": [
                        "XXX"
                    ]
                },
                "design_id": {
                    "type": "string",
                    "pattern": "^[A-Z]$",
                    "examples": [
                        "Q"
                    ]
                },
                "durability": {
                    "type": "integer",
                    "examples": [
                        1000000000
                    ]
                },
                "db_schema_version": {
                    "type": "string",
                    "pattern": "^\\d\\.\\d\\.\\d$",
                    "examples": [
                        "1.0.0"
                    ]
                },
                "pumpspeed_bactobox": {
                    "type": "integer",
                    "minimum": 1
                },
                "pumpspeed_zeus": {
                    "type": "integer",
                    "minimum": 1
                }
            },
            "additionalProperties": true
        },
        "sites": {
            "type": "object",
            "required": [
                "site0",
                "site1"
            ],
            "properties": {
                "site0": { "$ref": "#/definitions/site" },
                "site1": { "$ref": "#/definitions/site" }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}