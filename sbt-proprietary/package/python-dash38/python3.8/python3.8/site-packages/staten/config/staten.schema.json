{
	"definitions": {
	},
	"additionalProperties": false,
	"properties": {
		"system": {
			"$ref": "geist.schema.json#/definitions/systemConfig",
			"default": {}
		},
		"server": {
			"type": "object",
			"additionalProperties": false,
			"default": {},
			"properties": {
				"hostname": {
					"format": "hostname",
					"default": "localhost"
				},
				"port": {
					"type": "integer",
					"default": 8085
				}
			}
		},
		"programs": {
			"type": "object",
			"additionalProperties": false,
			"default": {},
			"properties": {
				"directoryPath": {
					"type": "string",
					"default": "{global.configDirectory}/programs"
				}
			}
		},
		"database": {
			"type": "object",
			"additionalProperties": false,
			"default": {},
			"properties": {
				"filePath": {
					"type": "string",
					"default": "{system.dataDirectory}/smp.sqlite"
				}
			}
		},
		"ecosystem": {
			"type": "object",
			"additionalProperties": false,
			"default": {},
			"properties": {
				"host": {
					"anyOf": [
						{"format": "hostname"},
						{"format": "ipv4"}
					],
					"default": "localhost"
				},
				"services": {
					"type": "object",
					"additionalProperties": false,
					"default": {},
					"properties": {
						"mester": {
							"type": "object",
							"additionalProperties": false,
							"default": {},
							"properties": {
								"port": {
									"type": "integer",
									"default": 8082
								}
							}
						},
						"dash": {
							"type": "object",
							"additionalProperties": false,
							"default": {},
							"properties": {
								"port": {
									"type": "integer",
									"default": 8085
								}
							}
						}
					}
				}
			}
		}
	}
}
