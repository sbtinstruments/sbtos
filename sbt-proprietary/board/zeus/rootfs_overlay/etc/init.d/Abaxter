#!/bin/sh
if [ -r /etc/default/rcS ]
then
    . /etc/default/rcS
else
    echo "/etc/default/rcS not found."
fi

case "$1" in
		start)
				echo -n "Starting baxter... "
				/bin/baxter
				echo "done."
				;;
		stop)
				echo -n "Stopping baxter... "
				pid=$(ps | awk '/[p]ython.*baxter/ {print $1}')
				if [ ! -z "$pid" ]
				then
					kill $pid
				fi
				echo "done."
				;;
		restart)
				$0 stop
				sleep 1
				$0 start
				;;
		*)
				echo "usage: $0 {start|stop|restart}"
				;;
esac

